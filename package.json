    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "fast-xml-parser": "^5.2.5",
    "helmet": "^8.1.0",
    "inquirer": "^10.2.0",
    "js-yaml": "^4.1.0",
